@model Core.Models.HtmlLoadModel

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>


<div class="row">
    <div class="col-md-12">
        <form asp-controller="Admin" asp-action="PageDetails_GetHTML" method="post">
            <div class="form-group">
                <label for="PageDetails">Select Page</label>
                <select asp-for="Id" asp-items="@Model.Codes" id="PageDetails" class="form-control-sm"></select>
                <input type="submit" value="Get HTML" class="btn btn-primary btn-sm"/>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-controller="Admin" asp-action="PageDetails_Save" method="post">
            @Html.HiddenFor(item => item.Id)
            @Html.TextAreaFor(item => item.Html, new { @class = "myCssClass", @id = "summernote" })
            <input type="submit" value="Save" class="btn btn-danger btn-sm"/>
        </form>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#summernote').summernote();
    });
</script>