@model Core.Models.CommentLoadModel


@foreach (var item in Model.Comments)
{
    <div class="row">
        <div class="col-md-12">
            <form asp-controller="Admin" asp-action="CustomerComments_Save">
                <div class="form-group">
                    <input id="Id" name="Id" type="hidden" class="form-control" value="@item.Id" />
                </div>
                <div class="form-group">
                    <label for="Name">Name: </label>
                    <input id="Name" name="Name" type="text" class="form-control" value="@item.Name" />
                </div>
                <div class="form-group">
                    <label for="Comment">Comment:</label>
                    <textarea id="Comment" name="Comment" type="text" class="form-control">@item.Comment</textarea>
                </div>
                <input type="submit" class="btn btn-primary btn-sm float-right" value="Edit" />
            </form>
            <a asp-action="CustomerComments_Delete" asp-controller="Admin" asp-route-id="@item.Id"><button type="button" class="btn btn-danger btn-sm">Delete!</button></a>
        </div>
    </div>
    <hr />
}

<div class="row">
    <div class="col-md-12">
        <form asp-controller="Admin" asp-action="CustomerComments_Save">
            <div class="form-group">
                <input id="Id" name="Id" type="hidden" class="form-control" value="0" />
            </div>
            <div class="form-group">
                <label for="Name">Name: </label>
                <input id="Name" name="Name" type="text" class="form-control" value="" />
            </div>
            <div class="form-group">
                <label for="Comment">Comment:</label>
                <textarea id="Comment" name="Comment" type="text" class="form-control"></textarea>
            </div>
            <input type="submit" class="btn btn-primary btn-sm" value="Add" />
        </form>
    </div>
</div>
<hr />
